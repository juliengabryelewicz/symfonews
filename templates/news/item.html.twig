<article class="mb-5">
    <div class="row">
        <div>
            <h2 class="article-title">
                {{ item.title }}
            </h2>
            <p>
                <strong>From :</strong> {{ item.feed.name }}
            </p>
            <p>
                <strong>Date :</strong> {{ item.date|date('d M Y H:i:s') }}
            </p>
            {{ item.description }}

            <p>
                <a href="{{ item.link }}" target="_blank" class="btn btn-success">See News</a>
                {% if item.guid not in favorites %}
                    <a href="{{ path('app_favorite_add', {'id': item.id}) }}" class="btn btn-primary">Add to Favorite</a>
                {% endif %}
            </p>

        </div>
    </div>
</article>